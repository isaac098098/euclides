#!/bin/bash

cp -r ~/.config/alacritty ~/euclides/.config
cp -r ~/.config/dunst ~/euclides/.config
cp -r ~/.config/gtk-3.0/settings.ini ~/euclides/.config
cp -r ~/.config/i3 ~/euclides/.config
cp -r ~/.config/nvim ~/euclides/.config
cp -r ~/.config/picom ~/euclides/.config
cp -r ~/.config/zathura ~/euclides/.config
cp -r ~/.config/fontconfig ~/euclides/.config

cp -r ~/.Xresources ~/euclides/home
cp -r ~/.bash_profile ~/euclides/home
cp -r ~/.bashrc ~/euclides/home
cp -r ~/.vimrc ~/euclides/home
cp -r ~/.xinitrc ~/euclides/home

cp -r ~/notes/tesis ~/documents/academic/esfm/tesis
rm ~/documents/academic/esfm/tesis/tesis/main.aux
rm ~/documents/academic/esfm/tesis/tesis/main.bbl
rm ~/documents/academic/esfm/tesis/tesis/main.blg
rm ~/documents/academic/esfm/tesis/tesis/main.fdb_latexmk
rm ~/documents/academic/esfm/tesis/tesis/main.fls
rm ~/documents/academic/esfm/tesis/tesis/main.idx
rm ~/documents/academic/esfm/tesis/tesis/main.ilg
rm ~/documents/academic/esfm/tesis/tesis/main.ind
rm ~/documents/academic/esfm/tesis/tesis/main.log
rm ~/documents/academic/esfm/tesis/tesis/main.synctex.gz
rm ~/documents/academic/esfm/tesis/tesis/main.toc
